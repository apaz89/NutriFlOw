@model NutriFlOw.Models.Account.LoginModel

@{
    ViewBag.Title = "Sign in";
    Layout = "~/Views/shared/_BootstrapLayout.empty.cshtml";
}

@using (@Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-signin" }))
{
    <h2 class="form-signin-heading">Sign in</h2>
    
    @Html.DisplayNameFor(x=>x.EMail)
    @Html.TextBoxFor(x=>x.EMail,new {@class="input-block-level"})
    @Html.DisplayNameFor(x=>x.Password)
    @Html.PasswordFor(x=>x.Password,new {@class="input-block-level"})
    
